{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Build */
    "outDir": "./dist"
  },
  "include": ["src", "./eslintrc.json"],
  "exclude": [
    "src/_design/**/*",
    "__test__/**/*",
    "build/**/*",
    "src/App.tsx",
    "src/vite-env.d.ts",
    "src/main.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/setupPackage.js",
    "src/setupTests.ts",
    "src/reportWebVitals.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
